<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Add a new tag</h2>
    <%# /plants/:plant_id/plant_tags/new %>
      <%= simple_form_for [@plant, @plant_tag] do |f| %>
      <%= f.input :tag, collection: Tag.all, input_html: { multiple: true, class: "multiple-select"} %>
      <%= f.submit "Add tag", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
